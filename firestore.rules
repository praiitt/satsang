rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to create documents in customGuruIntents collection
    // but not read, update, or delete (for privacy)
    match /customGuruIntents/{intentId} {
      allow create: if request.auth != null || true; // Allow anonymous users to submit
      allow read: if false; // No client-side reads
      allow update: if false; // No updates
      allow delete: if false; // No deletes
    }
    
    // Add other collection rules here as needed
  }
}

